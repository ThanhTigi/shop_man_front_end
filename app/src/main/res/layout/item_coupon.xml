<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvCouponCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code: SUMMER500"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDiscountPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount: 50%"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:textColor="#00FF00" />

    <TextView
        android:id="@+id/tvExpiryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiry: 31 May 2025"
        android:textSize="12sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvRemainingQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining: 10"
        android:textSize="12sp"
        android:layout_marginTop="4dp" />
</LinearLayout>