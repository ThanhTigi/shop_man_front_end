<!-- res/drawable/btn_quantity_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Màu nền khi nhấn -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Không màu nền khi không nhấn -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>