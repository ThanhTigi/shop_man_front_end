<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationViewTextActive">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationViewTextInactive">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="toolbar_background">@color/toolbar_background</item>
        <item name="toolbar_text_color">@color/toolbar_text_color</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:statusBarColor">@color/status_bar_background</item>
        <!-- Khôi phục hỗ trợ edge-to-edge với translucent -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.MaterialComponents.Light.Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/yellow</item>
        <item name="android:progressBackgroundTint">@color/grey</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="DiscountBorder">
        <item name="android:background">@drawable/border</item>
    </style>
</resources>