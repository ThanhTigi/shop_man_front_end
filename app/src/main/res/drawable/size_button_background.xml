<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="#FF69B4" /> <!-- Pink background for selected state -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Transparent background for unselected state -->
            <stroke android:width="1dp" android:color="#FF69B4" /> <!-- Pink border -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>