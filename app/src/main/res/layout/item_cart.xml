<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp">

    <!-- Checkbox -->
    <CheckBox
        android:id="@+id/cbSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    <!-- Product Image -->
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:contentDescription="Product Image" />

    <!-- Product Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Women's Casual Wear"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productVariations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Variations: Black, Red"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <RatingBar
                android:id="@+id/productRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.1"
                android:rating="4.8"
                android:isIndicator="true"
                android:layout_gravity="center_vertical"
                style="?android:attr/ratingBarStyleSmall" />

            <TextView
                android:id="@+id/ratingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.8"
                android:textSize="12sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$34.00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/productOriginalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$64.00"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/productDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="upto 33% off"
                android:textSize="12sp"
                android:textColor="#FF0000"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Quantity Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnDecrease"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="-"
                android:textSize="16sp"
                android:background="@android:drawable/btn_default" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:text="1"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@android:drawable/edit_text" />

            <Button
                android:id="@+id/btnIncrease"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="+"
                android:textSize="16sp"
                android:background="@android:drawable/btn_default" />
        </LinearLayout>

        <!-- Total Order for this Item -->
        <TextView
            android:id="@+id/tvTotalOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL ORDER (1): $34.00"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</LinearLayout>